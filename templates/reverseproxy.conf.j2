server {

    listen 80;
    server_name    {{ item.value.domain }};

    location /.well-known/acme-challenge {
      alias /var/www/{{ item.key }}/.well-known/acme-challenge;
    }

    location / {
     return 301 https://$server_name$request_uri;
    }
}

server {
    listen 443 ssl;
    server_name    {{ item.value.domain }};
    rewrite_log on;

    access_log /var/log/nginx/{{ item.key }}_access.log;
    error_log /var/log/nginx/{{ item.key }}_error.log error;

    ssl_certificate /etc/letsencrypt/live/{{ item.value.domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ item.value.domain }}/privkey.pem;
    ssl_session_timeout 5m;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;

    location /.well-known/acme-challenge {
      alias /var/www/{{ item.key }}/.well-known/acme-challenge;
    }

    # Turn on OCSP stapling as recommended at
    # https://community.letsencrypt.org/t/integration-guide/13123
    # requires nginx version >= 1.3.7
    ssl_stapling on;
    ssl_stapling_verify on;

    # Specifies the maximum accepted body size of a client request,
    # as indicated by the request header Content-Length.
    client_max_body_size 200m;

    # add ssl specific settings
    keepalive_timeout    90;

    # increase proxy buffer to handle some Odoo web requests
    proxy_buffers 16 64k;
    proxy_buffer_size 128k;

    #general proxy settings
    proxy_next_upstream error timeout invalid_header http_500 http_502 http_503;

    # set headers
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forward-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_x_forwarded_host;

    # Let the Odoo web service know that we're using HTTPS, otherwise
    # it will generate URL using http:// and not https://
    proxy_set_header X-Forwarded-Proto https;
    proxy_set_header X-Forwarded-Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    # by default, do not forward anything
    proxy_redirect off;
    proxy_buffering off;

    # common gzip
    gzip_types text/css text/less text/plain text/xml application/xml application/json application/javascript;
    gzip on;

    location / {
        {% if item.value.value.filters is defined %}
            {% for filter in item.value.filters %}
        {{ filter.filter_action }} {{ filter.filter_ip }}; # {{ filter.filter_comment }}
            {% endfor %}
        {% endif %}

        proxy_pass    http://{{ item.value.odoo }};
    }

    location /longpolling {
        {% if item.value.value.filters is defined %}
            {% for filter in item.value.filters %}
        {{ filter.filter_action }} {{ filter.filter_ip }}; # {{ filter.filter_comment }}
            {% endfor %}
        {% endif %}

        proxy_pass    http://{{ item.value.odoo_lp }};
    }

    location ~* /web/database/(manager|selector) {
        {% if item.value.value.filters is defined %}
            {% for filter in item.value.filters %}
        {{ filter.filter_action }} {{ filter.filter_ip }}; # {{ filter.filter_comment }}
            {% endfor %}
        {% endif %}

        
        auth_basic   "Please log in to db access!";
        auth_basic_user_file /etc/nginx/passwd{{ item.key }};
        proxy_pass http://{{ item.value.odoo }};
    }

    location ~* /web/login {
        {% if item.value.value.filters is defined %}
            {% for filter in item.value.filters %}
        {{ filter.filter_action }} {{ filter.filter_ip }}; # {{ filter.filter_comment }}
            {% endfor %}
        {% endif %}

        proxy_pass http://{{ item.value.odoo }};
    }

    location ~* /web/static/ {
        # cache some static data in memory for 90mins.
        # under heavy load this should relieve stress on the odoo web interface a bit.
        proxy_cache_valid 200 90m;
        proxy_buffering    on;
        expires 864000;

        {% if item.value.value.filters is defined %}
            {% for filter in item.value.filters %}
        {{ filter.filter_action }} {{ filter.filter_ip }}; # {{ filter.filter_comment }}
            {% endfor %}
        {% endif %}

        proxy_pass http://{{ item.value.odoo }};
    }
}
